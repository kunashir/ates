<h1>Tasks#new</h1>
<%= form_for @task, class: "row g-3" do |f| %>
  <div class="col-md-6">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_field :description, class: "form-input" %>
  </div>
  <div class="col-md-6">
    <%= f.label :jira_id, class: "form-label" %>
    <%= f.text_field :jira_id, class: "form-input" %>
  </div>
  <%= f.submit "Add", class: "btn btn-primary" %>
<% end %>
